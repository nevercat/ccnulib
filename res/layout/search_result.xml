<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_listitem_shot"
    android:padding="8dip" >

    <TextView
        android:id="@+id/searchBookNoTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#3F83AA" />

    <TextView
        android:id="@+id/searchBookTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/searchBookNoTV"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#3F83AA" />

    <TextView
        android:id="@+id/searchCallNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/searchBookNoTV"
        android:layout_below="@id/searchBookTitleTV"
        android:text="索书号："
        android:textColor="#7E7E7E" />

    <TextView
        android:id="@+id/searchAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/searchCallNo"
        android:layout_below="@id/searchCallNo"
        android:text="责任者："
        android:textColor="#7E7E7E" />

    <TextView
        android:id="@+id/searchPublisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/searchAuthor"
        android:layout_below="@id/searchAuthor"
        android:text="出版社："
        android:textColor="#7E7E7E" />

    <TextView
        android:id="@+id/searchType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/searchPublisher"
        android:layout_below="@id/searchPublisher"
        android:text="文献类型："
        android:textColor="#7E7E7E" />

