    <TextView
        android:id="@+id/searchCallNoTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchBookTitleTV"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/searchCallNo"
        android:textColor="#7E7E7E" />

    <TextView
        android:id="@+id/searchAuthorTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/searchCallNoTV"
        android:layout_below="@id/searchCallNoTV"
        android:textColor="#7E7E7E" />

    <TextView
        android:id="@+id/searchPublisherTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/searchAuthorTV"
        android:layout_below="@id/searchAuthorTV"
        android:textColor="#7E7E7E" />

    <TextView
        android:id="@+id/searchTypeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/searchPublisherTV"
        android:layout_below="@id/searchPublisherTV"
        android:textColor="#7E7E7E" />

